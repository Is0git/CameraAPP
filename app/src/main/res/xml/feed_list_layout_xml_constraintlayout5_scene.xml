<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="450">
        <KeyFrameSet></KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/feedCard_shape"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="@+id/share_text"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="@id/guideline19"
            motion:layout_constraintTop_toTopOf="@+id/ago_text" >
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="0dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/feedCard_shape"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            motion:layout_constraintBottom_toTopOf="@+id/comment_text"
            motion:layout_constraintTop_toTopOf="@+id/image_card"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="@id/guideline19">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="15dp" />
        </Constraint>
    </ConstraintSet>
    <Transition
        motion:constraintSetEnd="@+id/end2"
        motion:constraintSetStart="@+id/end"
        motion:autoTransition="animateToEnd"
        motion:transitionDisable="true"></Transition>

    <ConstraintSet android:id="@+id/end2">
        <Constraint
            android:id="@+id/feedCard_shape"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            motion:layout_constraintBottom_toTopOf="@+id/comment_text"
            motion:layout_constraintTop_toTopOf="@+id/image_card"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="@id/guideline19" ></Constraint>
        <Constraint
            android:id="@+id/guideline19"
            motion:layout_constraintGuide_percent="0.50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end2"
        motion:constraintSetEnd="@+id/start" >
        <OnSwipe motion:touchAnchorId="@id/feedCard_shape"
            motion:dragDirection="dragRight" />
    </Transition>
</MotionScene>