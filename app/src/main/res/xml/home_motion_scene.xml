<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">
    <Transition
        app:autoTransition="none"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:motionInterpolator="easeIn"
        app:duration="1200">
        <OnSwipe
            app:dragDirection="dragUp"

            app:maxAcceleration="100"
            app:touchAnchorId="@id/on_top_card"
            app:touchAnchorSide="top" />


    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/top_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:civ_border_color="@color/colorSecondaryVariant"
            android:minHeight="200dp"
            app:layout_constraintTop_toBottomOf="@+id/user_description">
            <CustomAttribute app:attributeName="backgroundColor"
                app:customColorValue="@color/colorSurface"/>
        </Constraint>

        <Constraint
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toTopOf="@+id/on_top_card"
            app:layout_constraintTop_toTopOf="@+id/top_card" />
        <Constraint
            android:id="@+id/avatar_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent">

        </Constraint>
        <Constraint
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/avatar_image">
            <Transform android:scaleY="1"
                android:scaleX="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/user_name">
            <Transform android:scaleY="1"
                android:scaleX="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/user_location">
            <Transform android:scaleY="1"
                android:scaleX="1"/>
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/top_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="170dp"
            android:minHeight="200dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline10">
            <CustomAttribute app:attributeName="backgroundColor"
                app:customColorValue="@color/colorLightGrey"/>
        </Constraint>

        <Constraint
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintBottom_toTopOf="@+id/on_top_card"
            app:layout_constraintTop_toTopOf="@+id/top_card" />

        <Constraint
            android:id="@+id/avatar_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent">
        </Constraint>
        <Constraint
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/avatar_image">
            <Transform android:scaleY="0"
                android:scaleX="0"/>
        </Constraint>

        <Constraint
            android:id="@+id/user_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/user_name">
            <Transform android:scaleY="0"
                android:scaleX="0"/>
        </Constraint>

        <Constraint
            android:id="@+id/user_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/user_location" >
            <Transform android:scaleY="0"
                android:scaleX="0"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>