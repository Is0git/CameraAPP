<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.android.cameraapp.ui.fragments.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:enterAnim="@anim/exit_scale_animation"
            app:exitAnim="@anim/enter_scale_animation"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            app:enterAnim="@anim/slide_left_animation"
            app:exitAnim="@anim/slide_right_animation"
            app:popEnterAnim="@anim/pop_back_left_animation"
            app:popExitAnim="@anim/pop_back_right_animation"
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.android.cameraapp.ui.fragments.StartFragment"
        android:label="StartFragment" >
        <action
            app:enterAnim="@anim/exit_scale_animation"
            app:exitAnim="@anim/enter_scale_animation"
            app:popEnterAnim="@anim/pop_enter_scale_animation"
            app:popExitAnim="@anim/pop_exit_scale_animation"
            android:id="@+id/action_startFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_startFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.android.cameraapp.ui.fragments.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.android.cameraapp.ui.fragments.CameraFragment"
        android:label="CameraFragment" />
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.android.cameraapp.ui.fragments.RegistrationFragment"
        android:label="RegistrationFragment" />
</navigation>