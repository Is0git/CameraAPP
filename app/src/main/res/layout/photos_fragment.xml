<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="1dp"
            app:cardCornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@id/photos_recyclerView"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/photos_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:elevation="1dp"
            android:fontFamily="@font/myriadprolt"
            android:text="15 Photos"
            android:textColor="@color/colorTextUser"
            android:textSize="50sp"
            app:layout_constraintEnd_toStartOf="@+id/chipGroup2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:elevation="1dp"
            app:singleSelection="true"
            app:layout_constraintBottom_toBottomOf="@+id/photos_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/photos_count"
            app:layout_constraintTop_toTopOf="@+id/photos_count">

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEWEST" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OLDEST" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOST POPULAR" />

        </com.google.android.material.chip.ChipGroup>

        <ImageView
            android:id="@+id/arrow_down"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/expand_down"
            android:backgroundTint="@color/colorAccent2"
            android:elevation="1dp"
            app:layout_constraintBottom_toTopOf="@+id/photos_recyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photos_count" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photos_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arrow_down"
            app:spanCount="3"
            tools:itemCount="24"
            tools:listitem="@layout/photos_list_layout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>