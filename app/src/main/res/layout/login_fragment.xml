<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"

        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="340dp"
                android:background="@drawable/login_fragment_shape"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="112dp"
                android:layout_height="47dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/login_text"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="41dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/myriadpro"
                android:scaleY="1.1"
                android:text="@string/don_t_have_an_account_create_your_account"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                style="@style/TextInputStyle"
                android:layout_marginTop="35dp"
                android:hint="@string/password"
                app:counterTextColor="@color/colorSecondaryVariant"
                app:endIconDrawable="@drawable/lock_outline_black_24x24"
                app:endIconMode="custom"
                app:layout_constraintEnd_toEndOf="@id/guideline4"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/user_name_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:textSize="@dimen/login_text_input_size"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_name_layout"
                style="@style/TextInputStyle"
                android:layout_marginTop="50dp"
                android:hint="@string/username"
                app:counterTextColor="@color/colorSecondaryVariant"
                app:endIconDrawable="@drawable/ic_person_outline_black_24dp"
                app:endIconMode="custom"
                app:layout_constraintEnd_toEndOf="@id/guideline4"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textSize="@dimen/login_text_input_size"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="41dp" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="top" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:textAlignment="textEnd"
                android:textColor="@color/colorMidDarkText"
                android:textSize="@dimen/regular_text_size"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox"
                app:layout_constraintEnd_toEndOf="@id/guideline4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/checkBox"
                app:layout_constraintTop_toTopOf="@+id/checkBox" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkBox"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:buttonTint="@color/colorTextDark"
                android:text="@string/remember_me"
                android:textAlignment="textStart"
                android:textColor="@color/colorMidDarkText"
                android:textSize="@dimen/regular_text_size"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                app:useMaterialThemeColors="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginButton"
                style="@style/AuthButton"
                android:layout_width="230dp"
                android:layout_height="65dp"
                android:layout_marginTop="35dp"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:text="@string/login"
                android:translationZ="2dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/barrier3" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="checkBox,textView2"
                tools:layout_editor_absoluteY="785dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/or_login_with"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/regular_text_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/loginButton"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="@+id/loginButton"
                app:layout_constraintTop_toBottomOf="@+id/loginButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButton16"
                style="@style/AuthButton"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                app:icon="@drawable/facebook_icon"
                app:iconSize="30dp"
                android:stateListAnimator="@null"
                android:translationZ="2dp"
                app:layout_constraintEnd_toStartOf="@+id/materialButton15"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@+id/loginButton"
                app:layout_constraintTop_toTopOf="@+id/materialButton15" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButton15"
                style="@style/AuthButton"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_marginTop="44dp"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:translationZ="2dp"
                app:icon="@drawable/twitter_icon"
                app:iconSize="30dp"
                app:layout_constraintEnd_toStartOf="@+id/materialButton17"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/materialButton16"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButton17"
                style="@style/AuthButton"
                android:layout_width="65dp"
                android:backgroundTint="@color/colorAccent"
                android:layout_height="50dp"
                app:icon="@drawable/google_icon"
                app:iconSize="30dp"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:translationZ="2dp"
                app:layout_constraintEnd_toEndOf="@+id/loginButton"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/materialButton15"
                app:layout_constraintTop_toTopOf="@+id/materialButton15" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="39dp" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="top"
                app:constraint_referenced_ids="materialButton15,materialButton16,materialButton17"
                tools:layout_editor_absoluteY="846dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>