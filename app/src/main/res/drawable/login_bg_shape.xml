<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate>
            <shape android:shape="rectangle">
                <corners />
                <gradient
                    android:angle="45"
                    android:centerX="float"
                    android:centerY="float"
                    android:endColor="#01f1fa"
                    android:gradientRadius="integer"
                    android:startColor="#0189ff"
                    android:type="linear" />


                <size
                    android:width="100dp"
                    android:height="50dp" />

            </shape>
        </rotate>

    </item>

    <item
        android:bottom="10dp"
        android:left="1dp">
        <rotate>
            <shape android:shape="rectangle">
                <corners android:bottomLeftRadius="50dp" />
                <solid android:color="@color/colorSurface" />


                <size
                    android:width="82dp"
                    android:height="82dp" />

            </shape>
        </rotate>

    </item>

    <item android:top="50dp">
        <rotate>
            <shape android:shape="rectangle">
                <corners
                    android:radius="50dp"
                    android:topRightRadius="10sp" />

                <size
                    android:width="20sp"
                    android:height="5dp" />

            </shape>
        </rotate>

    </item>
</layer-list>