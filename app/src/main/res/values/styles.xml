<resources>
    <!-- Base application theme. -->
    <style name="AuthTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimaryVariant">@color/colorOnPrimaryVariant</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="checkboxStyle">@style/Widget.MaterialComponents.CompoundButton.CheckBox</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorHomeLightGrey</item>
        <item name="android:windowBackground">@drawable/splashscreen_drawable</item>
        <item name="shapeAppearanceMediumComponent">@style/progressBar</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/colorSecondaryVariant</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorLightGrey</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:color">@color/colorPrimary</item>
    </style>

    <style name="AuthButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="addPhotoButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_height">63dp</item>
    </style>

    <style name="addPhotoButtonColored" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="colorSecondary">@color/colorSecondary2</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant2</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant2</item>
        <item name="android:windowFullscreen">true</item>


    </style>

    <style name="toolbarStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="progressBar" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerSize">15dp</item>
    </style>

    <style name="FeedMaterial" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/feedCardShape</item>
    </style>

    <style name="feedCardShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="feedTopCard" parent="">

    </style>
        <style name="fullScreenCard">
            <item name="shapeAppearanceOverlay">@style/fullScreenAppereance</item>
        </style>
    <style name="fullScreenAppereance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSize">5dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>
